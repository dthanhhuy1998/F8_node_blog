<div class="container">
    <div class="mt-4">
        <div class="row">
            <div class="col-md-12">
                <h2 align="center">Chỉnh sửa khóa học</h2>
                <form action="/courses/{{ course._id }}?_method=PUT" method="POST">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" placeholder="Enter name" value="{{ course.name }}" name="name">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea name="description" class="form-control" name="description">{{ course.description }}</textarea>
                    </div>
                    <div class="form-group">
                        <label>Video Youtube Id</label>
                        <input type="text" class="form-control" placeholder="Enter video id"  value="{{ course.videoId }}"  name="videoId">
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu lại</button>
                </form>
            </div>
        </div>
    </div>
</div>